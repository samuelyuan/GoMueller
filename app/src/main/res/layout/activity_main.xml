<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcome_message"
        android:id="@+id/textView"
        tools:context=".MainActivity"
        android:layout_marginTop="113dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_data"
        android:layout_below="@+id/textView"
        android:layout_marginTop="44dp"
        android:id="@+id/enterButton"
        android:onClick="onEnterButton"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_data"
        android:id="@+id/viewButton"
        android:layout_marginTop="103dp"
        android:onClick="onViewButton"
        android:layout_below="@+id/enterButton"
        android:layout_alignLeft="@+id/enterButton"
        android:layout_alignStart="@+id/enterButton"
        android:layout_alignRight="@+id/enterButton"
        android:layout_alignEnd="@+id/enterButton" />


</RelativeLayout>